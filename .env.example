# Variabili di ambiente per Docker Compose
# Copia questo file in .env e personalizza i valori

# Database PostgreSQL
DATABASE_NAME=todo_app_db
DATABASE_USERNAME=todo_user
DATABASE_PASSWORD=secure_password_change_me
DATABASE_PORT=5432
DATABASE_HOST=todo-database

# Application
NODE_ENV=development
PORT=3000
JWT_SECRET=your_super_secure_jwt_secret_32_characters_minimum

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m
LOG_TIMEZONE=Europe/Rome